{
  "name": "lihamnainiwan",
  "version": "1.1.0",
  "description": "Mga katha para sa mga makata",
  "main": "app.js",
  "scripts": {
    "check:security": "nsp check",
    "check:eslint": "./node_modules/eslint/bin/eslint.js ./server ./utility ./public/scripts/*.js ./*.js",
    "check": "npm-run-all check:*",
    "db-test": "node utility/buildsql.js --test && node utility/execsql.js",
    "db": "node utility/buildsql.js && node utility/execsql.js",
    "build:cleanup": "rm -rf ./build",
    "build:create": "mkdir build && mkdir build/assets && mkdir build/views",
    "build:copy-pug": "cp -r ./server/views/. ./build/views/",
    "build:copy-assets": "cp -r ./public/. ./build/assets/",
    "build:cleanup-js": "rm -r ./build/assets/stylesheets/*",
    "build:cleanup-css": "rm -r ./build/assets/scripts/*",
    "minify:css": "node utility/minifyCss.js --cdn",
    "minify:js": "node utility/minifyScripts.js --cdn",
    "minify": "npm-run-all minify:*",
    "build": "npm run check && npm-run-all build:* && npm run minify",
    "deploy": "node utility/uploadCdn.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/descouvre/lihamnainiwan"
  },
  "keywords": [
    "liham",
    "iniwan",
    "sulat",
    "filipino"
  ],
  "author": "Kenneth Bastian <bastian.kenneth.g@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "async": "^2.5.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.16.0",
    "cheerio": "^1.0.0-rc.2",
    "connect-flash": "^0.1.1",
    "connect-redis": "^3.2.0",
    "cookie-parser": "^1.4.3",
    "csurf": "^1.9.0",
    "express": "^4.14.0",
    "express-session": "^1.15.0",
    "hashids": "^1.1.1",
    "helmet": "^3.8.2",
    "jsonwebtoken": "^7.2.1",
    "markdown": "^0.5.0",
    "marked": "^0.3.9",
    "moment": "^2.17.1",
    "morgan": "^1.7.0",
    "multer": "^1.0.3",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "pg": "^6.1.2",
    "pg-promise": "^6.3.1",
    "pos": "^0.4.2",
    "pug": "^2.0.0-rc.2",
    "redis": "^2.6.5",
    "request": "^2.65.0",
    "shortid": "^2.2.6",
    "socket.io": "^2.0.3",
    "underscore": "^1.8.3",
    "uuid": "^3.1.0",
    "winston": "^2.3.1",
    "yargs": "^9.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "azure-storage": "^2.5.0",
    "browser-sync": "^2.18.13",
    "chai": "^3.2.0",
    "chalk": "^2.1.0",
    "clean-css": "^4.1.9",
    "cssnano": "^3.10.0",
    "eslint": "^4.7.2",
    "glob": "^7.1.2",
    "gulp": "^3.9.1",
    "istanbul": "^0.4.5",
    "karma": "^0.13.15",
    "mocha": "^2.3.3",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1",
    "nsp": "^2.8.1",
    "postcss": "^6.0.12",
    "precss": "^2.0.0",
    "sinon": "^1.17.4",
    "sinon-as-promised": "^4.0.2",
    "sinon-stub-promise": "^3.0.1",
    "stylus": "^0.54.5",
    "uglify-js": "^3.1.3",
    "wiredep": "^4.0.0"
  }
}