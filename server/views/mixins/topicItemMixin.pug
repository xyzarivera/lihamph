//- @topic - Topic class

mixin renderTopicItem(topic)
  .topic
    .topic-item.d-flex.pt-2.pb-1(id="topic" + topic.id)
      .topic-index.mr-3
        .upvote-heart(
          data-action=topic.isUpvoted ? "undo-upvote" : "upvote"
          data-id=topic.postId 
          data-csrf=csrfToken 
          data-count=topic.stats.upvotes)= topic.isUpvoted ? "‚ù§Ô∏è" : "üíõ"
        .upvote-count.text-center= topic.stats.upvotes
      .topic-content
        a(href="/posting/" + topic.id)= topic.title
        .pt-0.pb-1
          small.help
            span= "inilatha ni "
            a(href="/user/" + topic.author.username)= topic.author.username
            span= " - " + topic.stats.replies + " tugon - "
            span= utils.convertFromNowToFilipino(topic.createdDate.fromNow())