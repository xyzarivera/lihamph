extends includes/layout.pug

include mixins/topicItemMixin.pug

block main-content
  h1 Basahin ang mga liham

  .mt-2.mb-2
    each topic, index in searchResult.topics
      +renderTopicItem(topic)

  .pagination
    if options.page > 1
      a.mr-2(href="/?page=" + (options.page - 1)) ◀ mga naunang pahina
    if searchResult.totalCount > (options.limit * options.page)
      a.ml-2(href="/?page=" + (options.page + 1)) susunod na pahina ▶
    
