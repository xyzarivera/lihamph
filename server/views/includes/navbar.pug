.container
  header.blog-header.py-3
    .row.flex-nowrap.justify-content-between.align-items-center
      .col-4.pt-1
        a.text-muted.mr-3(href="/") Magbasa
        a.text-muted.mr-3(href="/search") Maghanap
        a.text-muted(href="/submit") Sumulat
      .col-4.text-center
        a.blog-header-logo.text-dark(href="/") Liham.ph
      .col-4.d-flex.justify-content-end.align-items-center
        if user && user.id
          a.text-muted.mr-3(href=`/user/${user.username}`)= user.username
          a.text-muted(href="/logout") Umalis
        else
          a.text-muted.mr-3(href="/login") Pumasok
          a.btn.btn-outline-secondary(href="/register") SUMALI
