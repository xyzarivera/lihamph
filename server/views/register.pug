extends includes/layout.pug

block main-content
  div
    h2 Sumali sa liham.ph
    p Isulat sa mga kahon sa baba ang iyong pagpapatunay na ikaw ay isang manunulat ng mga liham.
    if alert && alert.length > 0
      .alert(class=alert[0].status)
        p= alert[0].message
    form(method="POST" action="/register")
      input(type="hidden" name="_csrf" value=csrfToken)
      .form-group
        label(for="username") Sagisag 
        input.form-control(type="text" name="username" value="")
        small Username, pen name sa wikang Ingles. Sa ibang salita, ito ay ang iyong "alyas".
      .form-group
        label(for="password") Lihim na Salita
        input.form-control(type="password" name="password" value="")
        small Password sa wikang Ingles
      .form-group
        button.btn.btn-dark(type="submit") Itala ang rehistrasyon
